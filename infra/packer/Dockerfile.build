FROM ubuntu:20.04

# Install system dependencies
RUN apt-get update \
  && apt install -y --no-install-recommends \
    ca-certificates \
    curl \
    gcc \
    git \
    libc6-dev \
    make \
  && apt clean autoclean \
  && apt autoremove --yes \
  && rm -rf /var/lib/{apt,dpkg,cache,log}/

# Install go 
RUN curl -sL https://go.dev/dl/go1.18.linux-amd64.tar.gz | tar --strip-components=1 -C /usr/local -xz

# Copy Umee source in
WORKDIR /tmp/build/umee
COPY Makefile go.mod go.sum ./
COPY ante/ ante/
COPY app/ app/
COPY cmd/ cmd/
COPY tests/ tests/
COPY x/ x/

# Build umeed
RUN make build

# Clone Terra
WORKDIR /tmp/build/

# Build Terra
RUN git clone https://github.com/terra-money/core --branch v0.5.18 --single-branch --depth 1 terra
WORKDIR /tmp/build/terra
RUN make build

WORKDIR /root
